<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hatter">

   <Button
       android:id="@+id/teszt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Teszt Indítása"
       android:onClick="tesztOnClick"
       android:layout_centerInParent="true"
       android:background="@drawable/gomb_selector"
       android:padding="20dp"
       android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/osszes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Összes kérdés"
        android:onClick="osszesOnClick"
        android:layout_below="@id/teszt"
        android:layout_alignLeft="@id/teszt"
        android:background="@drawable/gomb_selector"
        android:padding="20dp"/>

    <Button
        android:id="@+id/vege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/teszt"
        android:padding="20dp"
        android:text="Vége"
        android:background="@drawable/gomb_selector"
        android:onClick="vegeOnClick"/>

</RelativeLayout>
